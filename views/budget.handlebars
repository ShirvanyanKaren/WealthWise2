<section class="create-budget-section">
  <div class="">
    <form class="form-container income">
      <h2>Income</h2>
      <label for="income-name">Income Name</label>
      <input
        type="text"
        id="income-name"
        class="field"
        placeholder="Enter income name"
      />
      <label for="income-amount">Income Amount</label>
      <input
        type="text"
        id="income-amount"
        class="field"
        placeholder="Enter income amount"
      />
      <label for="income-category">Category</label>
      <select id="income-category" class="field">
        <option value="Alimony/Child Support">Alimony/Child Support</option>
        <option value="Business Income">Business Income</option>
        <option value="Freelance">Freelance</option>
        <option value="Gifts">Gifts</option>
        <option value="Investment Income">Investment Income</option>
        <option value="Rental Income">Rental Income</option>
        <option value="Salary" selected>Salary</option>
        <option value="Side Gig">Side Gig</option>
        <option value="Other">Other</option>
      </select>
      <label>Description</label>
      <textarea
        class="field area"
        id="income-desc"
        placeholder="Enter income description"
      ></textarea>
      <button class="income-btn" type="submit">Add Income</button>
    </form>
    <form class="form-container expense">
      <h2>Expenses</h2>
      <label for="expense-name">Expense Name</label>
      <input
        type="text"
        id="expense-name"
        class="field"
        placeholder="Enter expense name"
      />
      <label for="expense-amount">Expense Amount</label>
      <input
        type="text"
        id="expense-amount"
        class="field"
        placeholder="Enter expense amount"
      />
      <label for="expense-category">Category</label>
      <select id="expense-category" class="field">
        <option value="Clothing and Accessories">Clothing and Accessories</option>
        <option value="Debt Payments">Debt Payments</option>
        <option value="Education">Education</option>
        <option value="Entertainment">Entertainment</option>
        <option value="Food">Food</option>
        <option value="Gifts and Donations">Gifts and Donations</option>
        <option value="Health and Wellness">Health and Wellness</option>
        <option value="Housing">Housing</option>
        <option value="Insurance">Insurance</option>
        <option value="Miscellaneous" selected>Miscellaneous</option>
        <option value="Personal Care">Personal Care</option>
        <option value="Savings and Investments">Savings and Investments</option>
        <option value="Taxes">Taxes</option>
        <option value="Transportation">Transportation</option>
        <option value="Travel">Travel</option>
        <option value="Utilities and Bills">Utilities and Bills</option>
      </select>
      <label for="expense-desc">Description</label>
      <textarea
        class="field area"
        id="expense-desc"
        placeholder="Enter expense description"
      ></textarea>
      <button class="expense-btn" type="submit">Add Expense</button>
    </form>
  </div>
</section>

<script src="/js/index.js"></script>
<script src="/js/expense.js"></script>
<script src="/js/income.js"></script>